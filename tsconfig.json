{
  "compilerOptions": {
    "jsx": "preserve",
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "skipLibCheck": true,
    "module": "commonjs",
    "target": "ES2018",
    "sourceMap": true,
    "outDir": "lib",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "allowJs": true
  },
  "exclude": [
    "node_modules",
    "lib",
    "spec",
    "commitlint.config.js",
    "**/*.spec.ts",
    "models",
    "migrations",
    "config",
    "example-app"
  ]
}
